#############################################
# üåê External Search and Web Tools
#############################################

# Required for research agents that use web search (Tavily)
TAVILY_API_KEY=your_key_here


#############################################
# ü§ñ Language Model Providers
#############################################

# Required if using Anthropic models (Claude family)
ANTHROPIC_API_KEY=your_key_here

# Required if using OpenAI models (GPT-4, GPT-4o, etc.)
OPENAI_API_KEY=your_key_here


#############################################
# üìä Tracing, Evaluation, and Experiment Tracking
#############################################

# Name of your project as it appears in the LangSmith dashboard
LANGSMITH_PROJECT="research-assistant"

# API key for LangSmith / LangChain unified client
LANGCHAIN_API_KEY=your_key_here

# If your workspace was created at https://smith.langchain.com ‚Üí use this (US region)
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# Enable V2 tracing (required for current LangChain integrations)
LANGCHAIN_TRACING_V2=true

# Optional backward-compatibility flag (some integrations still check this)
LANGSMITH_TRACING=true
